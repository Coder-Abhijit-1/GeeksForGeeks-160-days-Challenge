class Solution {
    public String mergeAlternately(String word1, String word2) {

        int p = 0 , q = 0;
        
        StringBuilder arr = new StringBuilder();
        while(p < word1.length() || q < word2.length()){
            if(p < word1.length()){
                arr.append(word1.charAt(p++));
            }if(q < word2.length()){
                arr.append(word2.charAt(q++));
            }
        }
        return arr.toString();

    }
}
